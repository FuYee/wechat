@import "../starsTP/starsTemplate.wxss";

.movie-detail-container {
  font-size: 30rpx;
  color: #7e7e7e;
}

.movie-detail-img {
  width: 100%;
  height: 320rpx;
  filter: blur(5px);
}

.top-wrap {
  position: relative;
  width: 100%;
  height: 320rpx;
  top: 0;
  left: 0;
}

.head-info {
  position: absolute;
  top: 60rpx;
  left: 30rpx;
  color: #fff;
}

.movie-title {
  font-weight: bold;
  font-size: 40rpx;
}

.head-small-img {
  width: 200rpx;
  height: 250rpx;
  position: absolute;
  right: -300rpx;
  top: 150rpx;
}

.year {
  margin: 30rpx 0;
  font-size: 36rpx;
  display: flex;
  flex-direction: row;
}

.count-info {
  color: #656464;
}

.color-wish {
  color: #f21146;
  margin-right: 10rpx;
  font-size: 30rpx;
}

.wish {
  margin-right: 20rpx;
}

.original-title {
  width: 66%;
  color: #666;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.people-info {
  padding: 60rpx 30rpx;
}

.color-gray {
  width: 100rpx;
  color: #9e9e9e;
  margin-right: 10rpx;
}

.cast-info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.hr {
  width: 100%;
  height: 1px;
  background: #d9d9d9;
}

.movie-intro-wrap {
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.movie-intro {
  color: #9e9e9e;
  margin-bottom: 50rpx;
}

.cast-wrap {
  display: flex;
  flex-direction: column;
}

.cast-txt {
  margin-bottom: 60rpx;
  margin-left: 30rpx;
}

.swiperX {
  /* width: 3000rpx; */
  height: 320rpx;
  overflow: hidden;
  margin-left: 30rpx;
  top: 0;
  left: 0;
}

.swiper-scroll {
  width: 3000rpx;
}
.swiper-scrolls {
   width: 200rpx; 
  float: left;
  margin-right: 10rpx;
  text-align: center;
}

.cast-pic {
  width: 200rpx;
  height: 235rpx;
}
